<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0EAE1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Imgview_cart"
        android:layout_width="229dp"
        android:layout_height="292dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo"
        app:srcCompat="@drawable/cart" />

    <ImageView
        android:id="@+id/Imgview_qr"
        android:layout_width="145dp"
        android:layout_height="151dp"
        android:layout_marginTop="124dp"
        app:layout_constraintBottom_toTopOf="@+id/Imgview_cart"
        app:layout_constraintEnd_toStartOf="@+id/tv_logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/qr" />

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="Hashtag"
        android:textColor="#ECBA10"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/Imgview_cart"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Imgview_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="266dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:text="완료하기"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:backgroundTint="#FB9B85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Imgview_cart" />
</androidx.constraintlayout.widget.ConstraintLayout>