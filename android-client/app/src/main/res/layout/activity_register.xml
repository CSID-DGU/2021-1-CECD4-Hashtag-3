<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".RegisterActivity">

    <EditText
            android:fontFamily="@font/enanum"
            android:background="@drawable/tv_background"
            android:id="@+id/tv_id"
            android:layout_width="257dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="아이디"
            android:inputType="textPersonName"

            app:layout_constraintStart_toStartOf="@+id/tv_user_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:fontFamily="@font/enanum"
            android:id="@+id/tv_email"
            android:layout_width="257dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName"
            android:background="@drawable/tv_background"
            app:layout_constraintStart_toStartOf="@+id/tv_pass" app:layout_constraintEnd_toEndOf="@+id/tv_pass"
            app:layout_constraintTop_toBottomOf="@+id/tv_pass" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:fontFamily="@font/enanum"
            android:id="@+id/tv_phone"
            android:layout_width="257dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="휴대전화"
            android:inputType="textPersonName"
            android:background="@drawable/tv_background"
            app:layout_constraintStart_toStartOf="@+id/tv_email" app:layout_constraintEnd_toEndOf="@+id/tv_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_email" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:fontFamily="@font/enanum"
            android:id="@+id/tv_user_name"
            android:layout_width="257dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:background="@drawable/tv_background" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:fontFamily="@font/enanum"
            android:id="@+id/tv_pass"
            android:layout_width="257dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="비밀번호"
            android:background="@drawable/tv_background"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/tv_id" app:layout_constraintEnd_toEndOf="@+id/tv_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_id" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:fontFamily="@font/enanum"
            android:background="@drawable/button_background"
            android:id="@+id/btn_katok"
            android:layout_width="237dp"
            android:layout_height="62dp"
            android:text="회원가입"
            app:layout_constraintStart_toStartOf="@+id/tv_phone"
            app:layout_constraintEnd_toEndOf="@+id/tv_phone" app:layout_constraintTop_toBottomOf="@+id/tv_phone"
            android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.523" android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>