<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".upload.UploadActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="499dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

            <TextView
                    android:fontFamily="@font/enanum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 업로드"
                    android:textColor="#274046"
                    android:textSize="20dp"
                    android:textStyle="bold" android:gravity="center_horizontal"/>

            <ImageView
                    android:id="@+id/action_image"
                    android:layout_width="334dp"
                    android:layout_height="284dp"
                    android:layout_marginLeft="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ffc3a0"
                    android:layout_gravity="center_horizontal"/>
            <Button
                    android:fontFamily="@font/enanum"
                    android:id="@+id/btnTambah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="사진 활영" android:textColor="@color/white" android:textSize="20sp"
                    android:textStyle="bold"/>
            <Button
                    android:fontFamily="@font/enanum"
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button2_background"

                    android:text="업로드" android:textColor="@color/white" android:textStyle="bold"
                    android:textSize="20sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

