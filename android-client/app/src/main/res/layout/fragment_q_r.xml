<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center|top"
             tools:context=".QRFragment">

    <ImageView
            android:layout_width="342dp"
            android:layout_height="359dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/qr_imgview"
            android:gravity="center|top"
            android:layout_marginTop="70dp" android:layout_gravity="center|top"/>
    <TextView
            android:text="퇴장시 출입구에서\n 보여주세요"
            android:layout_width="237dp"
            android:layout_height="58dp" android:id="@+id/textView5"

            android:layout_marginTop="450dp" android:textAlignment="center"
            android:gravity="center|top"
            android:textStyle="bold" android:textSize="20sp" android:textColor="#274046"
            android:layout_gravity="center|top"/>
    <TextView
            android:text="퇴장 QR코드"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#274046" android:textStyle="bold"
            android:textSize="34sp" android:gravity="center|top"
            android:layout_marginTop="16dp" android:textAlignment="center" android:layout_gravity="center|top"/>
    <Button
            android:fontFamily="@font/enanum"
            android:background="@drawable/button2_background"
            android:text="종료하기"
            android:gravity="center"
            android:layout_width="319dp"
            android:layout_height="61dp" android:id="@+id/btn_fin"
            android:layout_marginTop="530dp"
            android:layout_gravity="center|top" android:textAlignment="center" android:textSize="24sp"
            android:textColor="#5D3D37"/>


</FrameLayout>