<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QrActivity">

    <ImageView
            android:layout_width="342dp"
            android:layout_height="359dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/qr_imgview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="28dp"/>
    <TextView
            android:text="퇴장시 출입구에서\n 보여주세요^^"
            android:layout_width="237dp"
            android:layout_height="58dp" android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/qr_imgview"
            android:layout_marginTop="36dp" android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold" android:textSize="20sp" android:textColor="#274046"
            app:layout_constraintEnd_toEndOf="@+id/qr_imgview" app:layout_constraintStart_toStartOf="@+id/qr_imgview"/>
    <TextView
            android:text="퇴장 QR코드"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#274046" android:textStyle="bold"
            android:textSize="34sp" android:gravity="center" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:fontFamily="@font/enanum"
            android:background="@drawable/button2_background"
            android:text="종료하기"
            android:layout_width="216dp"
            android:layout_height="70dp" android:id="@+id/btn_fin"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.476" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>